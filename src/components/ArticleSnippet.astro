---
import { processArticleDate } from "../lib/utils";
import Anchor from "./common/Anchor.astro";

export type Props = {
  title: string;
  description: string;
  url: string;
  duration?: string;
  timestamp?: string;
  tags?: string[];
};

const { title, description, url, duration, timestamp, tags } = Astro.props;
---

<div class="group relative overflow-hidden bg-gradient-to-br from-base-200 to-base-300 rounded-xl border border-base-300 hover:border-primary/30 transition-all duration-300 hover:shadow-xl hover:-translate-y-1">
  <div class="p-6">
    <h2 class="text-2xl font-semibold text-primary group-hover:text-primary/80 transition-colors">
      <Anchor url={url}>{title}</Anchor>
    </h2>
    <p class="mt-3 text-base-content/80 leading-relaxed">{description}</p>
    
    <!-- Enhanced tags -->
    <div class="flex flex-wrap gap-2 mt-4">
      {
        tags && tags.map((tag) => (
          <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-primary/10 text-primary border border-primary/20 hover:bg-primary/20 transition-colors">
            {tag}
          </span>
        ))
      }
    </div>
    
    <div class="flex justify-between items-center mt-4 pt-4 border-t border-base-300">
      {timestamp && <time class="text-sm text-base-content/60">{processArticleDate(timestamp)}</time>}
      {duration && <span class="text-sm text-base-content/60">{duration}</span>}
    </div>
  </div>
</div>
