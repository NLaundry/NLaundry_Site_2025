---
import Anchor from "./common/Anchor.astro";

export type Props = {
  title: string;
  description: string;
  url: string;
  githubUrl?: string;
  liveUrl?: string;
  tags: string[];
};

const { title, description, url, githubUrl, liveUrl, tags } = Astro.props;
---

<div class="group relative overflow-hidden bg-gradient-to-br from-base-200 to-base-300 rounded-xl border border-base-300 hover:border-primary/30 transition-all duration-300 hover:shadow-xl hover:-translate-y-1 p-6 mb-6">
  <div class="flex flex-col gap-4">
    <div class="flex flex-col gap-3 sm:flex-row sm:justify-between">
      <Anchor url={url} class="text-xl font-semibold text-primary group-hover:text-primary/80 transition-colors">
        {title}
      </Anchor>
      <div class="flex gap-2">
        {
          githubUrl ? (
            <Anchor url={githubUrl} class="text-base btn btn-sm btn-outline" external>
              GitHub
            </Anchor>
          ) : null
        }
        {
          liveUrl ? (
            <Anchor url={liveUrl} class="text-base btn btn-sm btn-primary" external>
              Live
            </Anchor>
          ) : null
        }
      </div>
    </div>
    <p class="text-base-content/80 leading-relaxed">
      {description}
    </p>
    <div class="flex flex-wrap gap-2">
      {
        tags.map((tag) => (
          <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-primary/10 text-primary border border-primary/20 hover:bg-primary/20 transition-colors">
            {tag}
          </span>
        ))
      }
    </div>
  </div>
</div>
